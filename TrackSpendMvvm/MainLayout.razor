@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu"
		               Color="Color.Inherit"
		               Edge="Edge.Start"
		               OnClick="@((_) => ToggleDrawer())" />
		Track Spend - Your Saving App
	</MudAppBar>
	<MudDrawer @bind-Open="@_isDrawerOpen">
		<MyNavMenu />
	</MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.Medium"
		              Class="mt-16 px-8">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code
{
	private bool _isDrawerOpen = false;

	void ToggleDrawer() => _isDrawerOpen = !_isDrawerOpen;
}
